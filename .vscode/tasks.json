{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "C:\\Program Files\\CMake\\bin\\cmake.exe",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Visual Studio 17 2022",
                "-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DVCPKG_TARGET_TRIPLET=x64-windows"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            }
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "C:\\Program Files\\CMake\\bin\\cmake.exe",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "dependsOn": "CMake: Configure",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "C:\\Program Files\\CMake\\bin\\cmake.exe",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "dependsOn": "CMake: Configure",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/Release/CudaOpenGLApp.exe",
            "args": [],
            "dependsOn": "CMake: Build Release",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "rmdir /s /q ${workspaceFolder}\\build && mkdir ${workspaceFolder}\\build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true
            }
        }
    ]
}
